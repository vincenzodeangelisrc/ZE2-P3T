<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:id="@+id/layout_welcome4">


    <ImageView
        android:layout_width="@dimen/img_width_height"
        android:layout_height="@dimen/img_width_height"
        android:src="@drawable/ic_pin"
        tools:ignore="ContentDescription"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:id="@+id/icon_image_welcome4"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome4"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="@dimen/slide_title"
        android:textStyle="bold"
        android:id="@+id/welcome_text4"
        android:gravity="center"
        android:layout_below="@+id/icon_image_welcome4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        tools:ignore="SpUsage" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="40dp"
        android:layout_below="@+id/welcome_text4"
        android:layout_centerHorizontal="true"
        android:text="@string/welcome_text4"
        android:id="@+id/text_welcome"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="18sp"/>

</RelativeLayout>